<body class='bg-gray-100 h-screen flex items-center justify-center'>

  <div
    class='bg-off-white-blue p-8 rounded-lg shadow-md w-96 text-center text-black'
  >
    <!-- Banner -->
    <div class='bg-blue-500 text-black py-2 rounded-t-lg rounded-b-lg mb-4'>
      <h2 class='text-4xl font-semibold damion-font'>Get Cookin!</h2>
    </div>

    <!-- Login Form -->
    <form class='mb-4'>
      <!-- Username Input -->
      <div class='mb-4'>
        <label for='username' class='block text-black'>Username</label>
        <input
          type='text'
          id='username'
          name='username'
          class='w-full border p-2 rounded'
        />
      </div>

      <!-- Password Input -->
      <div class='mb-4'>
        <label for='password' class='block text-black'>Password</label>
        <input
          type='password'
          id='password'
          name='password'
          class='w-full border p-2 rounded'
        />
      </div>

      <!-- Login Button -->
      <button
        type='submit'
        class='bg-yellow-500 text-black px-4 py-2 rounded hover:bg-yellow-500 mx-auto'
      >Login</button>
    </form>

    <!-- Create New User Link with more space -->
    <div class='text-sm text-gray-500 mt-2'>
      <a href='#' class='hover:underline'>Create New User</a>
    </div>
  </div>
</body>