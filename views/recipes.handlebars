<div class="bg-gray-100">

    <div class="container mx-auto p-8">

        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-4xl font-semibold damion-font">My Cookbook</h1>
            <p class="text-gray-500">Explore and share your favorite recipes!</p>
        </div>

        <!-- Recipe Cards -->
        {{#each recipeData}}
        <div class="recipe-card">
            <div class="bg-white p-4 rounded-lg shadow-md">
                <!-- Display Recipe Information -->
                <img src="{{image}}" alt="{{title}}" class="mb-2 recipe-image">

                <p class="text-gray-700 mb-2 recipe-description{{#unless expanded}} collapsed{{/unless}}">
                    {{description}}
                </p>

                <!-- Tags for classification -->
                {{#if (gt (length recipe.category_id) 0)}}
                <div class="recipe-tags">
                    {{#each recipe.category_id}}
                    {{#with (lookup ../categoryData this)}}
                    <span class="tag">{{name}}</span>
                    {{/with}}
                    {{/each}}
                </div>
                {{/if}}

                <!-- Read More -->
                {{#if (gt (length description) 3)}}
                <p class="read-more collapsible">Read More...</p>
                {{/if}}
            </div>
        </div>
        {{/each}}

        <!-- Clear float to start a new row -->
        <div class="clear-float"></div>

    </div>

</div>

