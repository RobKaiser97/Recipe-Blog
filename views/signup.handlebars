<div class='bg-gray-100 h-screen flex items-center justify-center'>

  <div
    class='bg-off-white-blue p-8 rounded-lg shadow-md w-96 text-center text-black'
  >
    <!-- Banner -->
    <div class='bg-blue-500 text-black py-2 rounded-t-lg rounded-b-lg mb-4'>
      <h2 class='text-4xl font-semibold font-damion'>Get Cookin!</h2>
    </div>

    <!-- Signup Form -->
    <form id='#signup-form' class='mb-4'>
      <!-- Email Input -->
      <div class='mb-4'>
        <label for='email' class='block text-black'>Email</label>
        <input
          type='email'
          id='email'
          name='email'
          class='w-full border p-2 rounded'
        />
      </div>

      <!-- Password Input -->
      <div class='mb-4'>
        <label for='password' class='block text-black'>Password</label>
        <input
          type='password'
          id='password'
          name='password'
          class='w-full border p-2 rounded'
        />
      </div>

      <!-- Confirm Password Input -->
      <div class='mb-4'>
        <label for='confirmPassword' class='block text-black'>Confirm Password</label>
        <input
          type='password'
          id='confirmPassword'
          name='confirmPassword'
          class='w-full border p-2 rounded'
        />
      </div>

      <!-- Signup Button -->
      <button
        type='submit'
        class='bg-yellow-500 text-black px-4 py-2 rounded hover:bg-yellow-600 mx-auto'
      >Sign Up</button>
    </form>

    <!-- Already have an account Link with more space -->
    <div class='text-sm text-gray-500 mt-2'>
      <a href='/login' class='hover:underline'>Already have an account? Login here</a>
    </div>
  </div>
</div>

<script src='/js/signup.js'></script>