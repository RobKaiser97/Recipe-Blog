<div class='bg-gray-100 h-screen flex items-center justify-center'>

  <div
    class='sign-up-card highlighted-recipe-card'
  >
    <!-- Banner -->
    <div class='py-2 rounded-t-lg rounded-b-lg mb-4'>
      <h2 class='font-damion text-4xl text-white bg-custom-yellow rounded-lg p-2 mb-4 highlighted-recipe-card'>Get Cookin!</h2>
    </div>

    <!-- Signup Form -->
    <form class='mb-4 signup_form'>
      <!-- Email Input -->
      <div class='mb-4'>
        <label for='email' class='block font-acme text-black'>Email</label>
        <input
          type='email'
          id='email'
          name='email'
          class='w-full border p-2 rounded'
          placeholder='Enter your desired email'
          style='text-align: center;'
        />
      </div>

      <!-- Username Input -->
      <div class='mb-4'>
        <label for='username' class='block font-acme text-black'>Username</label>
        <input
          type='text'
          id='username'
          name='username'
          class='w-full border p-2 rounded'
          placeholder='Enter your desired username'
          required
          style='text-align: center;'
        />
      </div>

      <!-- Password Input -->
      <div class='mb-4'>
        <label for='password' class='block font-acme text-black'>Password</label>
        <input
          type='password'
          id='password'
          name='password'
          class='w-full border p-2 rounded'
          required
          minlength='8'
          placeholder='Enter your desired password'
          style='text-align: center;'
        />
      </div>

      <!-- Confirm Password Input -->
      <div class='mb-4'>
        <label for='confirmPassword' class='block font-acme text-black'>Confirm Password</label>
        <input
          type='password'
          id='confirmPassword'
          name='confirmPassword'
          class='w-full border p-2 rounded'
          placeholder='Confirm your password'
          style='text-align: center;'
        />
      </div>
      
      <!-- About section -->
      <div class='mb-4'>
        <label for='about' class='block font-acme text-black'>About Me</label>
        
        <textarea
          type='password'
          id='about'
          name='about'
          class='w-full border p-2 rounded'
          style='text-align: center;'></textarea>
        
      </div>

      <!-- Signup Button -->
      <button
        type='submit'
        class='submit-button text-white px-4 py-2 rounded-lg font-autour-one hover:bg-f3c655 mx-auto'
      >Sign Up</button>
    </form>

    <!-- Already have an account Link with more space -->
    <div class='text-sm text-gray-500 mt-2'>
      <a href='/login' class='hover:underline'>Already have an account? Login
        here</a>
    </div>
  </div>
</div>

<script src='/js/signup.js'></script>